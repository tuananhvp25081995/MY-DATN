extends ../layouts/common

block content
    h3(style="color:blue;font-weight:bold") Giảm Tiểu Cầu Linh Khuê
    if (status === 0)
        p#tit Giảm Giá Toàn Bộ Sản Phẩm #{sales}% &nbsp
            span#demo
    .container.pt-5
        .row
            each product in products
                .col-sm-3.cart-grid
                    .card.img(style="height:450px")
                        if (status === 0)
                            if (product.makm === 1)
                                div.saleoff_icon -#{sales1} %
                            if (product.makm === 1)
                                img.card-img-top.wow.tada(src='/' + product.image, alt='')
                                .card-body
                                    h5.card-title(style="font-weight:bold;font-size:15")= product.name
                                    div#price
                                        p.card-text(style="text-align:center;text-decoration: line-through;") #{pageInfo.calculatePrice(product.price)} vnđ
                                        p.card-text(style="color:red;font-weight:bold;") #{pageInfo.calculatePrice(product.price * (1-sales1/100))} vnđ
                                        if(product.quantity !== 0)
                                            p(style="color:blue") Còn hàng
                                        else
                                            p(style="color:blue") Hết hàng
                            if (product.makm === 2)
                                div.saleoff_icon -#{sales2} %
