                                    div#price
                                        p.card-text(style="text-align:center;text-decoration: line-through;") #{pageInfo.calculatePrice(product.price)} vnđ
                                        p.card-text(style="color:red;font-weight:bold;") #{pageInfo.calculatePrice(product.price * (1-sales2/100))} vnđ
                                        if(product.quantity !== 0)
                                            p(style="color:blue") Còn hàng
                                        else
                                            p(style="color:blue") Hết hàng
                            if (product.makm === 3)
                                div.saleoff_icon -#{sales3} %
