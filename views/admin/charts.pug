extends ../layouts/commons

block content
  #wrapper
    ul.sidebar.navbar-nav
      li.nav-item
        a.nav-link(href='/admin')
          i.fas.fa-fw.fa-tachometer-alt
          span Danh mục
      li.nav-item.active
        a.nav-link(href='/admin/charts')
          i.fas.fa-fw.fa-chart-area
          span Biểu đồ
      li.nav-item
        a.nav-link(href='/admin/hoa-don')
          i.fas.fa-fw.fa-shopping-cart
          span Hóa đơn
      li.nav-item
        a.nav-link(href='/admin/paid-bill')
          i.fas.fa-fw.fa-shopping-cart
          span Hóa đơn đã thanh toán
      li.nav-item
        a.nav-link(href='/admin/sale')
          i.fas.fa-fw.fa-shopping-cart
          span Khuyến mãi
      li.nav-item
        a.nav-link(href='/admin/products')
          i.fas.fa-fw.fa-table
          span Sản phẩm
      li.nav-item.active
        a.nav-link(href='/admin/users')
          i.fas.fa-user
          span Người dùng
    #content-wrapper
      .container-fluid
        ol.breadcrumb
          li.breadcrumb-item
            a(href='#') Danh mục
          li.breadcrumb-item.active biểu đồ
        .card.mb-3
          .card-header
            i.fas.fa-chart-area biểu đồ
          .card-body
            canvas#myAreaChart(width='100%', height='30')
          .card-footer.small.text-muted Updated yesterday at 11:59 PM
        .row
          .col-lg-8
            .card.mb-3
              .card-header
                i.fas.fa-chart-bar  Biểu đồ thu nhập 2018
              .card-body
                canvas#myBarChart(width='100%', height='50')
              .card-footer.small.text-muted Updated yesterday at 11:59 PM
          .col-lg-4
            .card.mb-3
              .card-header
                i.fas.fa-chart-pie  Biểu đồ chi tiết 2018
              .card-body
                canvas#myPieChart(width='100%', height='100')
              .card-footer.small.text-muted Updated yesterday at 11:59 PM
        p.small.text-center.text-muted.my-5
      footer.sticky-footer
        .container.my-auto
          .copyright.text-center.my-auto
            span Website giamtieucaulinhkhue
  a.scroll-to-top.rounded(href='#page-top')
    i.fas.fa-angle-up
  #logoutModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5#exampleModalLabel.modal-title Ready to Leave?
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body Select &quot;Logout&quot; below if you are ready to end your current session.
        .modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
          a.btn.btn-primary(href='/admin/login') Logout
  script(src='/vendor/jquery/jquery.min.js')
  script(src='/vendor/bootstrap/js/bootstrap.bundle.min.js')
  script(src='/vendor/jquery-easing/jquery.easing.min.js')
  script(src='/vendor/chart.js/Chart.min.js')
  script(src='/js/sb-admin.min.js')
  script(src='/js/demo/chart-area-demo.js')
  script(src='/js/demo/chart-bar-demo.js')
  script(src='/js/demo/chart-pie-demo.js')
