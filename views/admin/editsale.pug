title Quản lý - Edit sale
link(href='/vendor/fontawesome-free/css/all.min.css', rel='stylesheet', type='text/css')
link(href='/css/sb-admin.css', rel='stylesheet')
.container
.card.card-register.mx-auto.mt-5
  .card-header Thêm phiếu sale mới
  .card-body
    form(action="/admin/sale/edit/" + sale.id,method="POST")
      .form-group
        .form-label-group
          input#inputDescription.form-control(type='text',name='description', placeholder='Description', required='required',value = sale.description)
          label(for='inputDescription') Description
      .form-group
        .form-label-group
          input#inputSale.form-control(type='text',name='sale', placeholder='Sale', required='required',value = sale.sale)
          label(for='inputSale') Sale
      .form-group
        .form-row
          .col-md-6
            .form-label-group
              input#inputStartDay.form-control(type='text',name='startday', placeholder=' Ngày bắt đầu', required='required',value= sale.startday)
              label(for='inputStartDay') Ngày bắt đầu
          .col-md-6
            .form-label-group
              input#inputEndDay.form-control(type='text',name='endday', placeholder='Ngày kết thúc', required='required',value= sale.endday)
              label(for='inputEndDay') Ngày kết thúc
      button.mt-3(class="btn btn-primary",style='width:200px;margin-left:200px;') Update
script(src='/vendor/jquery/jquery.min.js')
script(src='/vendor/bootstrap/js/bootstrap.bundle.min.js')
script(src='/vendor/jquery-easing/jquery.easing.min.js')
