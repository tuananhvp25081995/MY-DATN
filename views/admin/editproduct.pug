title Quản lý - Register
link(href='/vendor/fontawesome-free/css/all.min.css', rel='stylesheet', type='text/css')
link(href='/css/sb-admin.css', rel='stylesheet')
.container
.card.card-register.mx-auto.mt-5
  .card-header Sửa sản phẩm
  .card-body
    form(action="/admin/product/edit/" + product.id,method="POST",enctype="multipart/form-data")
      .form-group
        .form-label-group
          input#inputName.form-control(type='text',name='name',placeholder='Name', required='required', autofocus='autofocus',value =product.name)
          label(for='inputName') Name
      .form-group
        .form-label-group
          input#inputDescription.form-control(type='text',name='description', placeholder='Description', required='required',value =product.description)
          label(for='inputDescription') Description
      .form-group
        .form-label-group
          input#inputCategory.form-control(type='text',name='category', placeholder='Thể loại', required='required',value = product.category)
          label(for='inputCategory') Thể loại
      .form-group
        .form-row
          .col-md-6
            .form-label-group
              input#inputPrice.form-control(type='text',name='price', placeholder='Giá', required='required',value= product.price)
              label(for='inputPrice') Giá
          .col-md-6
            .form-label-group
              input#inputQuantity.form-control(type='text',name='quantity', placeholder='Số Lượng', required='required',value=product.quantity)
              label(for='inputQuantity') Số Lượng
      .form-group
        .form-label-group
          input#inputImage.form-control(type='file',name='image', placeholder='Image', required='required',value=product.image)
          label(for='inputImage') Image
      button.mt-3(class="btn btn-primary",style='width:200px;margin-left:200px;') Update
script(src='/vendor/jquery/jquery.min.js')
script(src='/vendor/bootstrap/js/bootstrap.bundle.min.js')
script(src='/vendor/jquery-easing/jquery.easing.min.js')
