extends ../layouts/common

block content
    h1 Login user
    if errors
        each error in errors
            .alert.alert-danger= error
        
    form(action="/auth/login",method="POST",class="form-group",style="font-weight:bold")
        label(style="color: blue;font-weight:bold") Email
        input(type="text", name="email",class="form-control",style ="width: 500px",value = values ? values.email : '')
        label(style="color: blue;font-weight:bold") Password
        input(type="password", name="password",class="form-control",style ="width: 500px",value = values ? values.password : '')
        button(class="btn btn-primary mt-4 ") Login
